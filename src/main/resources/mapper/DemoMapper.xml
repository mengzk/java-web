<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mon.aichat.mapper.DemoMapper">
    <!-- 配置 查询结果的列明和实体类的属性名的对应关系; -->
    <resultMap id="roomMap" type="com.mon.aichat.model.entity.DemoEntity">
        <!--主键字段的对应 -->
        <id property="id" javaType="Integer" column="id"/>
        <!--非主键字段的对应-->
        <result property="createTime" javaType="Date" column="create_date"/>
    </resultMap>

    <cache/>

    <insert id="onInsert">
        INSERT INTO token (userId, value) VALUES (#{id},#{value});
    </insert>

    <update id="onUpdate">
        UPDATE token
        <set>
            value=#{value}
        </set>
        WHERE userId=#{id};
    </update>

    <select id="onQuery" resultType="com.mon.aichat.model.entity.DemoEntity">
        SELECT * FROM token
        <where>
            <if test="id!=null">
                id = #{id}
            </if>
        </where>
    </select>

    <delete id="onDelete">
        DELETE FROM token WHERE userId=#{id};
    </delete>

    <select id="onCount" resultType="int">
        SELECT count(*) FROM token;
    </select>

</mapper>