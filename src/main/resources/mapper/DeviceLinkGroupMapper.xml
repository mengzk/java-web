<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mon.aichat.mapper.DeviceLinkGroupMapper">

    <!-- 配置 查询结果的列明和实体类的属性名的对应关系; -->
    <resultMap id="groupLinkMap" type="com.mon.aichat.model.dto.DeviceLinkGroupDTO">
        <!--主键字段的对应 -->
        <id property="id" javaType="Integer" column="id"/>
        <!--非主键字段的对应-->
        <result property="did" javaType="Integer" column="did"/>
        <result property="gid" javaType="Integer" column="gid"/>
        <result property="time" javaType="String" column="time"/>
    </resultMap>

    <select id="onQuery" resultMap="groupLinkMap">
        SELECT * FROM ac_device_link_group
        <if test="gid!=null and gid!='' and gid!=0">
            where gid = #{gid}
        </if>
        limit #{start},#{size};
    </select>

    <insert id="onBind">
        insert into ac_device_link_group (did,gid,time) values
        <foreach item="id" collection="ids" separator=",">
            (#{id},#{gid},#{time})
        </foreach>
    </insert>

    <!--    ids='1,2,3,4,5,6,7'    -->
    <!--    <delete id="onDelete">-->
    <!--        delete form ac_device_link_group where id in (#{ids});-->
    <!--    </delete>-->

    <delete id="onDelete">
        delete form ac_device_link_group where id in
        <foreach item="id" collection="ids" separator="," open="(" close=")">
            #{id}
        </foreach>
        <set>
            and gid = #{gid}
        </set>
    </delete>
</mapper>