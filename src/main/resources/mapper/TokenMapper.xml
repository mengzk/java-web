<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mon.aichat.mapper.TokenMapper">

    <!--    &lt; for < (less-than)-->
    <!--    &gt; for > (greater-than)-->
    <!--    &amp; for & (ampersand)-->
    <!--    &quot; for " (double quote)-->
    <!--    &apos; for ' (single quote)-->

    <cache/>

    <insert id="insert">
        INSERT INTO token (userId, value) VALUES (#{id},#{value});
    </insert>

    <update id="update">
        UPDATE token
        <set>
            value=#{value}
        </set>
        WHERE userId=#{id};
    </update>

    <!--  添加缓存  -->
    <select id="query" resultType="com.mon.aichat.model.entity.TokenEntity">
        SELECT * FROM token where userId=#{id};
    </select>

    <delete id="delete">
        DELETE FROM token WHERE userId=#{id};
    </delete>

    <update id="resetTokens">
        UPDATE token
        <set>
            value=NULL
        </set>
        WHERE value IS NOT NULL AND time &lt; NOW();
    </update>

    <select id="exists" resultType="int">
        SELECT COUNT(*) FROM token WHERE userId=#{id};
    </select>

    <update id="upsert">
        <choose>
            <when test="exists(id) > 0">
                UPDATE token
                <set>
                    value=#{value}
                </set>
                WHERE userId=#{id};
            </when>
            <otherwise>
                INSERT INTO token (userId, value) VALUES (#{id}, #{value});
            </otherwise>
        </choose>
    </update>
</mapper>