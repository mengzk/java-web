<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mdx.hubing.mapper.AccountMapper">

    <!-- 配置 查询结果的列明和实体类的属性名的对应关系; -->
    <resultMap id="accountMap" type="com.mdx.hubing.model.dto.AccountDao">
        <!--主键字段的对应 -->
        <id property="id" javaType="Integer" column="id"/>
        <!--非主键字段的对应-->
        <result property="uid" javaType="String" column="uid"/>
        <result property="icon" javaType="String" column="icon"/>
        <result property="nickname" javaType="String" column="nickname"/>
        <result property="email" javaType="String" column="email"/>
        <result property="phone" javaType="String" column="phone"/>
        <result property="about" javaType="String" column="about"/>
        <result property="pwd" javaType="String" column="pwd"/>
        <result property="tag" javaType="Integer" column="tag"/>
        <result property="level" javaType="Integer" column="level"/>
        <result property="score" javaType="Integer" column="score"/>
        <result property="grade" javaType="Integer" column="grade"/>
        <result property="status" javaType="Integer" column="status"/>
        <result property="channel" javaType="Integer" column="channel"/>
        <result property="shareCode" javaType="String" column="share_code"/>
        <result property="createDate" javaType="String" column="create_date"/>
        <result property="channelSign" javaType="String" column="channel_sign"/>

    </resultMap>

    <select id="login" resultMap="accountMap">
        SELECT * FROM account
        <where>
            <if test="body.phone!=null and body.phone!=''">
                phone = #{body.phone}
            </if>
            <if test="body.email!=null and body.email!=''">
                or email = #{body.email}
            </if>
            <if test="body.pwd!=null and body.pwd!=''">
               and pwd = #{body.pwd}
            </if>
        </where>
    </select>

    <!--    <insert id="register" parameterType="com.mdx.hubing.model.entity.AccountEntity">-->
    <!--    <insert id="register" useGeneratedKeys="true" keyProperty="id" keyColumn="id">-->
    <insert id="register" useGeneratedKeys="true" keyProperty="id">
        insert into account
        (uid,pwd,phone,email,nickname,icon,channel,share_code,create_date,channel_sign) values
        (#{user.uid},#{user.pwd},#{user.phone},#{user.email},#{user.nickname},
        #{user.icon},#{user.channel},#{user.shareCode},#{user.createDate},#{user.channelSign});
        <selectKey keyProperty="id" keyColumn="id" order="AFTER" resultType="int">
            SELECT LAST_INSERT_ID();
        </selectKey>
    </insert>

    <update id="updateAccount">
        update account
        <set>
            <if test="body.pwd!=null">
                pwd = #{body.pwd},
            </if>
            <if test="body.icon!=null">
                icon = #{body.icon},
            </if>
            <if test="body.nickname!=null">
                nickname = #{body.nickname},
            </if>
        </set>
        where id = #{body.id};
    </update>

    <select id="check" resultType="Integer">
        SELECT id FROM account where
        <if test="body.phone!=null and body.phone!=''">
            phone = #{body.phone};
        </if>
        <if test="body.email!=null and body.email!=''">
            email = #{body.email};
        </if>
    </select>

    <select id="query" resultType="Integer">
        SELECT id FROM account where
        <if test="body.phone!=null and body.phone!=''">
            phone = #{body.phone};
        </if>
        <if test="body.email!=null and body.email!=''">
            email = #{body.email};
        </if>
    </select>

    <select id="queryByUid" resultMap="accountMap">
        SELECT * FROM account where uid=#{uid};
    </select>

    <update id="reset">
        update account pwd = #{pwd} where id = #{id};
    </update>

    <select id="logout" resultType="int">
        SELECT count(*) FROM account;
    </select>

    <select id="accountNum" resultType="int">
        SELECT count(*) FROM account;
    </select>

    <select id="accountAll" resultMap="accountMap">
        SELECT * FROM account;
    </select>
</mapper>